{% extends 'Areas/Admin/base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="row">
        <div class='small-12 columns'>
            {% if users|length == 0 %}
            <div class="center-text">
                Aucun utilisateur trouvé
            </div>
            {% else %}
            <table>
                <thead>
                <tr>
                    <th> 
                    Nom
                    </th>
                    <th>
                    Action
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for user in users%}
                    <tr>
                    <td>{{ user.Username}}</a></td>
                    <td> 
                        {% if 'ROLE_ADMIN' not in user.Roles %}
                        <a href="{{url('app_admin_delete_user', {'id': user.id})}}">
                            <i class="fa fa-times" title="Supprimer l'utilisateur"></i>
                        </a>
                        <a href="{{url('app_admin_up_user', {'id': user.id})}}">
                            <i class="fa fa-user-tie" title="Définir l'utilisateur comme administrateur"></i>
                        </a>
                        {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% endif %}
            </div>
      </div>

{% endblock %}
