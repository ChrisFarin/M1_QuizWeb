{% extends 'Areas/User/base.html.twig' %}

{% block title %}Statistiques de {{quizName}}{% endblock %}

{% block body %}
<div class="row align-center">
    <div class="small-12 medium-9 columns ">
        {% if questionsResults|length == 0 %}
            <div class="center-text border-quiz" >Aucune statistiques ne peut être générée pour le quiz "{{quizName | raw}}"</div>


        {% else %}
        <div class="row align-center">
            <div class='small-12 columns'>
                <div class='center-text border-quiz'>
                    La moyenne du quiz "{{quizName | raw}}" est de {{mean |round(2)}} / {{questionsResults|length}}.
                </div>
            </div>
            {% for i in 0..questionsResults|length - 1 %}
                <div class="small-12 medium-6 columns border-quiz center-text">
                    Question : {{questionsEntitled[i] | raw}}
                    {% if questionsResults[i] >= 50 %}
                        <div class="rightAnswer center-text">
                            Pourcentage de bonne réponse :{{questionsResults[i]}}% ({{questionsAnswers[i]}} / {{questionsTotal[i]}})
                        </div>

                    {% else %}
                        <div class="wrongAnswer center-text">
                            Pourcentage de bonne réponse :{{questionsResults[i]}}% ({{questionsAnswers[i]}} / {{questionsTotal[i]}})
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
{% endblock %}
