{% extends 'Areas/User/base.html.twig' %}

{% block title %}
  Vos quizs
{% endblock %}

{% block body %}
  <div class="row">
    <div class="small-12 columns">
    <div class="text-center">
      <h1 class="font-bungee" >Liste de vos quizs</h1>
    </div>
    {% if quizs|length == 0 %}
      <div class="center-text border-shadow">
          Aucun quiz trouvé
      </div>
    {% else %}
      <div class="border-shadow">
      <table>
        <thead>
          <tr>
            <th> 
              Nom
            </th>
            <th>
              Nombre de questions
            </th>
            <th>
              Visible
            </th>
            <th>
              Action
            </th>
          </tr>
        </thead>
        <tbody>
          {% for quiz in quizs%}
             <tr>
               <td><a href="{{url('app_quiz_question', {'id' : quiz.id})}}">{{ quiz.Name}}</a></td>
               <td> {{ quiz.questions|length}} </td>
               <td> {% if quiz.IsVisible %} <i class="fa fa-check" title="Le quiz est public"></i> {% else %} <i class="fa fa-times" title="Le quiz est privé"></i> {% endif %}</td>
               <td> 
                    <a href="{{url('app_stats_quiz', {'id': quiz.id, 'test': true})}}">
                      <i class="fa fa-signal" title="Statistiques du quiz"></i>
                    </a>
                    {% if quiz.questions|length > 0 %}
                     <a href="{{url('app_do_quiz', {'id': quiz.id, 'test': true})}}">
                      <i class="fa fa-question" title="Tester le quiz"></i>
                    </a>
                    {% endif %}
                    <a href="{{url('app_edit_quiz', {'id': quiz.id})}}">
                      <i class="fa fa-pencil-alt" title="Editer le quiz"></i>
                    </a>
                    <a href="{{url('app_create_question', {'id': quiz.id})}}">
                        <i class="fa fa-plus" title="Ajouter une question"></i>
                    </a>
                    <a href="{{url('app_delete_quiz', {'id': quiz.id})}}">
                        <i class="fa fa-times" title="Supprimer le quiz"></i>
                    </a>
                </td>

             </tr>
          {% endfor %}
        </tbody>
      </table>
      </div>
    {% endif %}
    </div>
  </div>
  

{% endblock %}