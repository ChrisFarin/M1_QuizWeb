{% extends 'Areas/User/base.html.twig' %}

{% block title %}
  Questions du quiz {{quizs.name}}
{% endblock %}

{% block body %}
  <div class="row">
    <div class="small-12 columns">
    <h1 class="center-text font-bungee">Liste des questions du quiz "{{quizs.name | raw}}"</h1>
    {% if quizs.questions|length == 0 %}
      <div class="center-text border-shadow">
          Aucune question trouvée
      </div>
    {% else %}
    <div class="border-shadow">
      <table>
        <thead>
          <tr>
            <th> 
              Intitulé
            </th>
            <th>
              Nombre de réponse
            </th>
            <th>
              Action
            </th>
          </tr>
        </thead>
        <tbody>
          {% for question in quizs.questions%}
             <tr>
               <td>{{ question.entitled | raw}}</td>
               <td> {{ question.answers|length}} </td>
               <td> <a href="{{url('app_edit_question', {'id': question.id})}}">
                      <i class="fa fa-pencil-alt" title="Editer la question"></i>
                    </a>
                    <a href="{{url('app_delete_question', {'id': question.id})}}">
                        <i class="fa fa-times" title="Supprimer la question"></i>
                    </a>
                </td>
             </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    {% endif %}
    <center>
      <a class="button border-round" href="{{url('app_user_quiz')}}">Retour</a>
    </center>
    </div>
  </div>
  

{% endblock %}