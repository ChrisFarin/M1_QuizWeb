<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>

        {% block stylesheets %}
             <link rel="stylesheet" type="text/css" href="{{asset('build/css/app.css')}}"/>
        {% endblock %}
    </head>
    <body>
        <header>

            <div class="row align-justify header mar-bottom">
                <div class="small-3 columns">
                    <a href="{{ url('app_index')}}"><img src="{{asset('build/images/logo.png')}}" title="SYB" alt="SYB" ></a>
                </div>
                <div class="small-6 columns">
                  {{ render(url('app_login')) }}
                </div>
            </div>
        </header>

        <nav>
      {% block navbar %}

          {% if isRegistering is not defined or isRegistering is null or not isRegistering %}
          <div class="row">
            <div class="small-12 columns">
              <ul class="tabs" data-tabs id="myTabs">
                <li class="tabs-title is-active"><a href="#QuizList" aria-selected="true">Liste des quizs</a></li>
                {% if app.user %}

                  <li class="tabs-title" ><a href="#MyQuizs">Mes quizs</a></li>
                  <li class="tabs-title" ><a href="#CreateQuiz">Cr√©er un quiz</a></li>
                {% endif %}
              </ul>
            </div>
            {% endif %}

      {% endblock %}
          </nav>
      {% block body %}
      
      {% if isRegistering is not defined or isRegistering is null or not isRegistering %}

      <div class="tabs-content" data-tabs-content="myTabs">
        <div class="tabs-panel is-active" id="QuizList">
          Page test
        </div>
        {% if app.user %}
          <div class="tabs-panel" id="MyQuiz">

          </div>
          <div class="tabs-panel" id="CreateQuiz">
            {{ render(url('app_create_quiz')) }}
          </div>
        {% endif %}
      </div>
      {% endif %}
      {% endblock %}

      {% block javascripts %}
          <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
          <script src="https://cdn.jsdelivr.net/npm/foundation-sites@6.4.3/dist/js/foundation.min.js" integrity="sha256-mRYlCu5EG+ouD07WxLF8v4ZAZYCA6WrmdIXyn1Bv9Vk= sha384-KzKofw4qqetd3kvuQ5AdapWPqV1ZI+CnfyfEwZQgPk8poOLWaabfgJOfmW7uI+AV sha512-0gHfaMkY+Do568TgjJC2iMAV0dQlY4NqbeZ4pr9lVUTXQzKu8qceyd6wg/3Uql9qA2+3X5NHv3IMb05wb387rA==" crossorigin="anonymous"></script>
          <script>
             $(document).foundation();
          </script>
      {% endblock %}
    </body>
</html>
